{
  "name": "kit",
  "private": true,
  "version": "0.2.0",
  "description": "Kit desktop toolbox for everyday workflows",
  "author": "Manon",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build:base": "tsc && vite build",
    "build": "cross-env NODE_ENV=production npm run build:base",
    "build:analyze": "cross-env ANALYZE=1 npm run build && node scripts/build-optimizer.mjs",
    "analyze": "cross-env ANALYZE=1 npm run build",
    "build:production": "npm run build && npm run optimize",
    "preview": "vite preview",
    "deps:apply": "node scripts/deps-replacer.mjs apply --plan ./deps-plan.json",
    "deps:pr": "node scripts/deps-replacer.mjs pr --plan ./deps-plan.json",
    "optimize": "node scripts/build-optimizer.mjs",
    "publish": "node scripts/updater.mjs",
    "changelog": "node scripts/changelog-generator.mjs",
    "changelog:generate": "node scripts/changelog-generator.mjs generate",
    "changelog:release": "node scripts/changelog-generator.mjs release-notes",
    "changelog:test": "node scripts/test-changelog.mjs",
    "release:patch": "npm version patch && npm run changelog:generate && git add CHANGELOG.md && git commit -m 'docs: update changelog' && git push --tags",
    "release:minor": "npm version minor && npm run changelog:generate && git add CHANGELOG.md && git commit -m 'docs: update changelog' && git push --tags",
    "release:major": "npm version major && npm run changelog:generate && git add CHANGELOG.md && git commit -m 'docs: update changelog' && git push --tags",
    "clean": "rm -rf dist node_modules/.vite",
    "ci:build:analyze": "cross-env ANALYZE=1 npm run build && node scripts/build-optimizer.mjs",
    "clean:all": "npm run clean && rm -rf node_modules",
    "ci:check-tools": "node scripts/check-tools.mjs",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "electron:compile:dev": "concurrently \"tsc -p electron/tsconfig.json --watch\" \"tsc -p electron/tsconfig.preload.json --watch\" \"node scripts/ensure-preload-cjs.mjs --watch\"",
    "electron:rename-preload": "node scripts/ensure-preload-cjs.mjs",
    "electron:start": "wait-on tcp:5173 && cross-env NODE_ENV=development VITE_DEV_SERVER_URL=http://localhost:5173 electron electron/dist-electron/main.js",
    "electron:dev": "npm run electron:compile && concurrently \"npm:dev\" \"npm:electron:compile:dev\" \"npm:electron:start\"",
    "electron:compile": "tsc -p electron/tsconfig.json && tsc -p electron/tsconfig.preload.json && npm run electron:rename-preload",
    "electron:build": "npm run build:base && npm run electron:compile && node scripts/prepare-win-icon.mjs && electron-builder -c electron-builder.yml"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@ffmpeg/core": "^0.12.10",
    "@ffmpeg/ffmpeg": "^0.12.15",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toggle": "^1.1.10",
    "@radix-ui/react-toggle-group": "^1.1.11",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tabler/icons-react": "^3.35.0",
    "@tailwindcss/vite": "^4.1.16",
    "@tanstack/react-query": "^5.90.5",
    "@tanstack/react-query-devtools": "^5.90.2",
    "@tanstack/react-router": "^1.134.4",
    "@tanstack/react-virtual": "^3.13.12",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "fflate": "^0.8.2",
    "gifuct-js": "^2.1.2",
    "i18next": "^25.6.0",
    "i18next-browser-languagedetector": "^8.2.0",
    "jsbarcode": "^3.12.1",
    "lucide-react": "^0.552.0",
    "mermaid": "^11.12.1",
    "motion": "^12.23.24",
    "nanoid": "^5.1.6",
    "next-themes": "^0.4.6",
    "pdf-lib": "^1.17.1",
    "qrcode": "^1.5.4",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-i18next": "^16.2.3",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.16",
    "vaul": "^1.1.2",
    "web-vitals": "^5.1.0",
    "xlsx": "^0.18.5",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@actions/github": "^6.0.1",
    "@tanstack/router-plugin": "^1.134.6",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.9.2",
    "@types/qrcode": "^1.5.6",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/coverage-v8": "^4.0.6",
    "@vitest/ui": "^4.0.6",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^33.4.11",
    "electron-builder": "^25.1.8",
    "electron-updater": "^6.6.2",
    "jsdom": "^27.1.0",
    "rollup-plugin-visualizer": "^6.0.5",
    "terser": "^5.44.0",
    "tsx": "^4.20.6",
    "tw-animate-css": "^1.4.0",
    "typescript": "~5.9.3",
    "vite": "^7.1.12",
    "vitest": "^4.0.6",
    "wait-on": "^7.2.0",
    "png-to-ico": "^2.1.8"
  }
}
